<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:backgroundTint="?attr/colorPrimaryContainer"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/attendance_item_padding"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Left Section - Date and Status -->
        <LinearLayout
            android:id="@+id/dateContainer"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
                android:textStyle="bold"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"/>

        </LinearLayout>

        <!-- New TextView for 'today' -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/todayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            app:layout_constraintStart_toStartOf="@id/dateContainer"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Right Section - Times -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/dateContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Time Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Check In -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check In"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/timeInText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_marginTop="4dp"
                            android:text="11:50 AM"/>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="8dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Target In"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/targetTimeInText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?attr/colorOutline"/>

                    <!-- Check Out -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check Out"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/timeOutText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:layout_marginTop="4dp"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="8dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Target Out"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/targetTimeOutText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.chip.Chip
                android:id="@+id/statusChip"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:chipCornerRadius="16dp"

                style="@style/Widget.Material3.Chip.Assist"/>

            <!-- Buttons -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/checkInButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:text="Check In"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="0dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/checkOutButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="Check Out"
                        app:cornerRadius="0dp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>