    <style name="Base.Theme.SchoolTimeTrackAttendanceSystem" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
        <item name="dialogCornerRadius">24dp</item>
    </style>


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/transparent</item>
        <item name="windowSplashScreenAnimationDuration">50</item>
        <item name="postSplashScreenTheme">@style/Theme.SchoolTimeTrackAttendanceSystem</item>
    </style>

    <style name="calendarDateTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="calendarHeaderTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">#000</item>
    </style>

    <style name="Theme.SchoolTimeTrackAttendanceSystem" parent="Base.Theme.SchoolTimeTrackAttendanceSystem" />
