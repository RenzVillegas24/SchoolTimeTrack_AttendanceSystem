<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".layout.StudentMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="?attr/colorSurface"
        tools:context=".layout.StudentMenu">

        <!-- Existing content -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ablToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent" 
                android:layout_height="?attr/actionBarSize"
                app:title="Student Menu"
                app:menu="@menu/top_app_bar"
                app:titleCentered="true"
                app:navigationIcon="@drawable/ic_menu_rounded"
                app:navigationIconTint="?attr/colorOnSurface"/>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/attendanceContainer"
            android:layout_below="@id/ablToolbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:orientation="vertical">

                <com.shuhart.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:mcv_showOtherDates="all"
                    app:mcv_bottomTopDayPadding="3dp"
                    app:mcv_calendarMode="month"
                    app:mcv_headerTextAppearance="@style/calendarHeaderTextAppearance"
                    app:mcv_dateTextAppearance="@style/calendarDateTextAppearance"
                    app:mcv_selectionRangeColor="?attr/colorSecondaryContainer"
                    tools:ignore="PrivateResource" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="Mode of Selection"/>

                    <com.schooltimetrack.attendance.ui.SegmentedControl
                        android:id="@+id/segSelectionType"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        app:cornerRadius="16dp"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="Single" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="Range" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="Multiple" />

                    </com.schooltimetrack.attendance.ui.SegmentedControl>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="Selected Dates"/>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="4dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="?attr/colorSurfaceVariant"
                        style="@style/Widget.Material3.CardView.Filled">

                        <TextView
                            android:id="@+id/selectedListDatesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:textSize="14sp"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/currentAttendanceText"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="Current Attendance"/>

                    <LinearLayout
                        android:id="@+id/currentListAttendance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:orientation="vertical"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <!-- Rest of your existing layout -->
        <com.schooltimetrack.attendance.ui.WeeklyAttendanceView
            android:id="@+id/weeklyAttendanceView"
            android:background="?attr/colorSurface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ablToolbar"
            android:clipToPadding="false"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/monthYearTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/ablToolbar"
            android:paddingBottom="24dp"
            android:paddingTop="8dp"
            android:background="@drawable/gradient_background"
            android:textSize="18sp"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/bottomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_background_below"
            android:textSize="18sp"
            android:gravity="center"/>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/main_drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>